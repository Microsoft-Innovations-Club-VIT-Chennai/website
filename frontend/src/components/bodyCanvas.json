      "connect": {
        "distance": 300,
        "links": {
          "opacity": 1
        },
        "radius": 120
      },
      "grab": {
        "distance": 100,
        "links": {
          "opacity": 1
        }
      },
      "push": {
        "quantity": 4
      },
      "repulse": {
